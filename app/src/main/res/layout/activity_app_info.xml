<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/mainBackground">

    <!-- ===== AppBar / Header ===== -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@drawable/appbar_gradient_vertical"
        android:elevation="8dp">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:paddingHorizontal="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_version"
                    app:tint="@color/white"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="О приложении"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:fontFamily="@font/abril_fatface_regular"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"/>
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- ===== Content ===== -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- ===== Version Block ===== -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/ultraLightPurple">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_version"
                        app:tint="@color/mainPurple"/>

                    <TextView
                        android:id="@+id/textVersion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Версия: 1.0.0"
                        android:textColor="@color/mainGreen"
                        android:textSize="16sp"
                        android:fontFamily="@font/source_sans_3_medium"
                        android:layout_marginStart="12dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- ===== Description Block ===== -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/ultraLightPurple">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:text="Описание"
                        android:textColor="@color/mainPurple"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/textDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Это приложение для управления событиями, пользователями и чатом."
                        android:textColor="@color/mainGreen"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/source_sans_3_regular"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- ===== Author / Info Block ===== -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/ultraLightPurple">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:text="Разработчик"
                        android:textColor="@color/mainPurple"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/textAuthor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ARK_DAS Studio"
                        android:textColor="@color/mainGreen"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/source_sans_3_regular"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- ===== Close Button ===== -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCloseDialog"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Закрыть"
                android:textColor="@color/white"
                android:backgroundTint="@color/mainPurple" />
        </LinearLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
