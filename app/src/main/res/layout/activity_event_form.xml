<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_event_form"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainBackground"
    tools:context=".ui.EventFormActivity">

    <!-- AppBar -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/appbar_gradient_vertical"
        android:elevation="8dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_gravity="bottom"
            android:background="@android:color/transparent"
            android:paddingTop="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_event_white"
                    android:contentDescription="@string/event"
                    app:tint="@color/white" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/toolbar_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/new_event"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:fontFamily="@font/source_sans_3_semi_bold" />

                    <TextView
                        android:id="@+id/toolbar_subtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/fill_all_fields"
                        android:textColor="#CCFFFFFF"
                        android:textSize="14sp"
                        android:fontFamily="@font/source_sans_3_regular" />
                </LinearLayout>

                <ImageButton
                    android:id="@+id/btn_menu"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/ic_more_vert_white"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/back"
                    app:tint="@color/white" />
            </LinearLayout>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>


    <!-- SCROLL CONTENT -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- СЕКЦИЯ 1: Главная информация -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/ultraLightPurple">

                <LinearLayout
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/main_info"
                        android:textColor="@color/mainGreen"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_marginBottom="16dp"
                        android:fontFamily="@font/source_sans_3_semi_bold"/>

                    <!-- Название -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layout_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/event_name"
                        app:hintTextColor="@color/mainGreen"
                        app:boxStrokeColor="@color/mainPurple"
                        app:boxStrokeWidth="2dp"
                        app:boxStrokeWidthFocused="2dp"
                        app:endIconMode="clear_text"
                        app:endIconTint="@color/mainPurple"
                        android:layout_marginBottom="16dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/input_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/mainGreen"
                            android:textSize="16sp"
                            android:maxLines="1"
                            android:padding="12dp"
                            android:fontFamily="@font/source_sans_3_regular"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Описание -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layout_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/event_description"
                        app:hintTextColor="@color/mainGreen"
                        app:boxStrokeColor="@color/mainPurple"
                        app:boxStrokeWidth="2dp"
                        app:endIconMode="clear_text"
                        app:endIconTint="@color/mainPurple"
                        android:layout_marginBottom="8dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/input_description"
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:textColor="@color/mainGreen"
                            android:textSize="16sp"
                            android:gravity="top"
                            android:maxLines="5"
                            android:inputType="textMultiLine"
                            android:padding="12dp"
                            android:fontFamily="@font/source_sans_3_regular"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>



            <!-- СЕКЦИЯ 2: Адрес и время -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/ultraLightPurple">

                <LinearLayout
                    android:padding="16dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="@string/place_and_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/mainGreen"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_marginBottom="16dp"
                        android:fontFamily="@font/source_sans_3_semi_bold" />

                    <!-- Адрес -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layout_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/adress"
                        app:boxStrokeColor="@color/mainPurple"
                        app:boxStrokeWidth="2dp"
                        app:boxStrokeWidthFocused="2dp"
                        app:endIconMode="clear_text"
                        android:layout_marginBottom="16dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/input_address"
                            android:textColor="@color/mainGreen"
                            android:padding="12dp"
                            android:textSize="16sp"
                            android:maxLines="2"
                            android:letterSpacing="0.03"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Итоговая дата + время -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layout_datetime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/date_and_time"
                        app:boxStrokeColor="@color/mainPurple"
                        app:boxStrokeWidth="2dp"
                        app:boxStrokeWidthFocused="2dp"
                        android:layout_marginBottom="16dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/input_datetime"
                            android:enabled="false"
                            android:textColor="@color/mainGreen"
                            android:textSize="16sp"
                            android:padding="12dp"
                            android:fontFamily="@font/source_sans_3_regular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </com.google.android.material.textfield.TextInputLayout>


                    <!-- Кнопки дата + время -->
                    <LinearLayout
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:weightSum="2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_pick_date"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/date"
                            android:onClick="setDate"
                            android:layout_weight="1"
                            android:icon="@drawable/ic_calendar"
                            android:iconTint="@color/mainGreen"
                            android:textColor="@color/mainGreen"
                            android:backgroundTint="@color/white"
                            android:layout_marginEnd="8dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_pick_time"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/time"
                            android:onClick="setTime"
                            android:layout_weight="1"
                            android:icon="@drawable/ic_time"
                            android:iconTint="@color/mainGreen"
                            android:textColor="@color/mainGreen"
                            android:backgroundTint="@color/white"
                            android:layout_marginStart="8dp" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>



            <!-- СЕКЦИЯ 3: Тэги -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/ultraLightPurple">

                <LinearLayout
                    android:padding="16dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="@string/categories"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/mainGreen"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_marginBottom="16dp"
                        android:fontFamily="@font/source_sans_3_semi_bold" />

                    <!-- Псевдо-TextInput: открывает список -->
                    <LinearLayout
                        android:id="@+id/tags_selector"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12dp"
                        android:background="@drawable/tags_dropdown_background"
                        android:clickable="true"
                        android:focusable="true">

                        <TextView
                            android:id="@+id/tags_hint"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/choose_tags"
                            android:textColor="@color/mainGreen"
                            android:textSize="16sp"
                            android:alpha="0.7"
                            android:fontFamily="@font/source_sans_3_regular" />

                        <!-- Выбранные тэги -->
                        <HorizontalScrollView
                            android:id="@+id/selected_tags_scroll"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/selected_tags_border"
                            android:scrollbars="horizontal"
                            android:padding="6dp">
                        <LinearLayout
                            android:id="@+id/selected_tags_container"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="8dp" />
                        </HorizontalScrollView>
                    </LinearLayout>

                    <!-- Выпадающий список -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_tags"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:visibility="gone"
                        android:background="@drawable/tags_dropdown_background"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>




            <!-- КНОПКИ создания / редактирования -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:id="@+id/create_buttons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp"
                    android:weightSum="2">

                    <Button
                        android:id="@+id/btn_create"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="@string/btn_create"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:background="@drawable/ripple_gradient_primary"
                        android:layout_marginEnd="8dp"
                        android:fontFamily="@font/source_sans_3_semi_bold" />

                    <Button
                        android:id="@+id/btn_cancel_create"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="@string/btn_cancel"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:background="@drawable/ripple_gradient_secondary"
                        android:layout_marginStart="8dp"
                        android:fontFamily="@font/source_sans_3_medium" />
                </LinearLayout>


                <Button
                    android:id="@+id/btn_delete"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:text="@string/btn_delete_event"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:background="@drawable/ripple_gradient_error"
                    android:letterSpacing="0.02"
                    android:fontFamily="@font/source_sans_3_medium" />


                <LinearLayout
                    android:id="@+id/edit_buttons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="8dp"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        android:layout_marginBottom="8dp">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_save"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            android:text="@string/save"
                            android:textColor="@color/white"
                            app:backgroundTint="@color/mainPurple" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_cancel_edit"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:text="@string/cancel"
                            android:textColor="@color/mainPurple"
                            app:backgroundTint="@color/ultraLightPurple"
                            app:strokeColor="@color/mainPurple"
                            app:strokeWidth="1dp" />
                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_delete_sec"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="@string/delete"
                        android:textColor="@color/white"
                        app:backgroundTint="@android:color/holo_red_dark" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
