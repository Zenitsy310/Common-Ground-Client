<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_add_user_form"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainBackground"
    tools:context=".UserForm">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/mainGreen"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/mainGreen"
            app:title="@string/form_title"
            app:titleTextColor="@color/white"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Аватар пользователя -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginBottom="20dp">

                <ImageView
                    android:id="@+id/form_avatar"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@color/lightPurple"
                    android:src="@android:drawable/ic_menu_gallery"
                    app:tint="@color/white"
                    android:scaleType="centerInside"
                    android:contentDescription="@string/avatar_description"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackgroundBorderless" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/change_avatar"
                    android:textColor="@color/mainPurple"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp" />

            </LinearLayout>

            <!-- Основные поля формы -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/ultraLightPurple"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Имя и Фамилия в одной строке -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/layout_form_textFieldFirstName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            app:hintTextColor="@color/mainGreen"
                            app:boxStrokeColor="@color/mainPurple"
                            app:endIconTint="@color/mainPurple">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/form_textFieldFirstName"
                                android:hint="@string/form_first_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/mainGreen"
                                android:textSize="16sp" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/layout_form_textFieldLastName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            app:hintTextColor="@color/mainGreen"
                            app:boxStrokeColor="@color/mainPurple"
                            app:endIconTint="@color/mainPurple">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/form_textFieldLastName"
                                android:hint="@string/form_last_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/mainGreen"
                                android:textSize="16sp" />

                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                    <!-- Email -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layout_form_textFieldEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        app:hintTextColor="@color/mainGreen"
                        app:boxStrokeColor="@color/mainPurple"
                        app:endIconTint="@color/mainPurple"
                        app:endIconMode="clear_text">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/form_textFieldEmail"
                            android:hint="@string/form_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textEmailAddress"
                            android:textColor="@color/mainGreen"
                            android:textSize="16sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Логин -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layout_form_textFieldLogin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        app:hintTextColor="@color/mainGreen"
                        app:boxStrokeColor="@color/mainPurple"
                        app:endIconTint="@color/mainPurple"
                        app:endIconMode="clear_text">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/form_textFieldLogin"
                            android:hint="@string/form_login"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/mainGreen"
                            android:textSize="16sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Пароль -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layout_form_textFieldPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        app:hintTextColor="@color/mainGreen"
                        app:boxStrokeColor="@color/mainPurple"
                        app:endIconTint="@color/mainPurple"
                        app:endIconMode="password_toggle"
                        app:passwordToggleTint="@color/mainPurple">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/form_textFieldPassword"
                            android:hint="@string/form_password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPassword"
                            android:textColor="@color/mainGreen"
                            android:textSize="16sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Дополнительные поля -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/ultraLightPurple"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Биография -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layout_form_textFieldBio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        app:hintTextColor="@color/mainGreen"
                        app:boxStrokeColor="@color/mainPurple"
                        app:endIconTint="@color/mainPurple">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/form_textFieldBio"
                            android:hint="@string/form_bio"
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:gravity="top"
                            android:inputType="textMultiLine"
                            android:maxLines="5"
                            android:textColor="@color/mainGreen"
                            android:textSize="16sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Роль -->
                    <com.google.android.material.textfield.TextInputLayout

                        android:id="@+id/layout_form_spinnerRole"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        app:hintTextColor="@color/mainGreen"
                        app:boxStrokeColor="@color/mainPurple"
                        app:endIconTint="@color/mainPurple">
                        <!--style="@style/Widget.Material3.TextInputLayout.FilledBox.ExposedDropdownMenu"-->
                        <Spinner
                            android:id="@+id/form_spinnerRole"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@drawable/spinner_background"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:layout_marginBottom="8dp" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Кнопки действий -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/form_buttonSave"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="@string/button_save_user"
                    android:textColor="@color/white"
                    app:backgroundTint="@color/mainPurple"
                    style="@style/Widget.Material3.Button" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/form_buttonDelete"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="@string/button_delete_user"
                    android:textColor="@color/white"
                    app:backgroundTint="@color/mainPurple"
                    style="@style/Widget.Material3.Button" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/form_buttonCancel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="@string/button_cancel"
                    android:textColor="@color/mainPurple"
                    app:backgroundTint="@color/ultraLightPurple"
                    app:strokeColor="@color/mainPurple"
                    app:strokeWidth="1dp"
                    style="@style/Widget.Material3.Button.OutlinedButton" />
        </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>