<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainBackground"
    tools:context=".ui.SettingsActivity">

    <!-- ===== AppBarLayout + Toolbar ===== -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/appbar_gradient_vertical"
        android:elevation="8dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/transparent"
            app:contentInsetStart="0dp"
            app:contentInsetEnd="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="24dp"
                android:paddingEnd="24dp">

                <!-- Иконка настроек -->
                <ImageView
                    android:id="@+id/settings_icon"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_settings"
                    app:tint="@color/white"
                    android:layout_marginEnd="16dp"
                    android:contentDescription="@string/settings"
                    android:clickable="true"
                    android:focusable="true"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <!-- Основной заголовок -->
                    <TextView
                        android:id="@+id/toolbar_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/settings"
                        android:textColor="@color/white"
                        android:textSize="26sp"
                        android:fontFamily="@font/abril_fatface_regular"/>

                    <!-- Подзаголовок -->
                    <TextView
                        android:id="@+id/toolbar_subtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/your_app_settings"
                        android:textColor="#CCFFFFFF"
                        android:textSize="14sp"
                        android:fontFamily="@font/source_sans_3_medium"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>


    <!-- ===== Контент ===== -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:paddingBottom="80dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- ===== Персонализация ===== -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/personalisation"
                android:textColor="#666666"
                android:textSize="14sp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/source_sans_3_semi_bold"/>

            <!-- Тёмная тема
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="8dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="12dp"
                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_dark_mode"
                        android:layout_marginEnd="16dp"
                        app:tint="@color/mainPurple" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Тёмная тема"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:fontFamily="@font/source_sans_3_regular"
                        android:layout_weight="1"/>

                    <Switch
                        android:id="@+id/switch_dark_theme"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>-->

            <!-- Язык -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="16dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="12dp"
                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:id="@+id/layout_switch_language"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_language"
                        android:layout_marginEnd="16dp"
                        app:tint="@color/mainPurple" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/language"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:fontFamily="@font/source_sans_3_regular"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/current_language"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ru"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:fontFamily="@font/source_sans_3_medium"
                        android:layout_marginEnd="8dp"/>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_arrow_right"
                        app:tint="@color/black" />

                    <Spinner
                        android:id="@+id/spinnerLanguage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- ===== Система ===== -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/system"
                android:textColor="#666666"
                android:textSize="14sp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/source_sans_3_semi_bold"/>

            <!-- Уведомления -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="8dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="12dp"
                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_notifications"
                        android:layout_marginEnd="16dp"
                        app:tint="@color/mainPurple" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/notifications"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:fontFamily="@font/source_sans_3_regular"
                        android:layout_weight="1"/>

                    <Switch
                        android:id="@+id/switch_notifications"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- О приложении -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="16dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="12dp"
                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:id="@+id/layout_app_info"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_info"
                        android:layout_marginEnd="16dp"
                        app:tint="@color/mainGreenEmerald" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/about_app"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:fontFamily="@font/source_sans_3_regular"
                        android:layout_weight="1"/>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_arrow_right"
                        app:tint="@color/black" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- ===== Аккаунт ===== -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/account"
                android:textColor="#666666"
                android:textSize="14sp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/source_sans_3_semi_bold"/>

            <!-- Войти -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="16dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="12dp"
                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:id="@+id/layout_logout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_login"
                        android:layout_marginEnd="16dp"
                        app:tint="@color/mainGreen" />

                    <TextView
                        android:id="@+id/login_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/exit"
                        android:textColor="@color/mainGreen"
                        android:textSize="16sp"
                        android:fontFamily="@font/source_sans_3_medium"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- ===== Безопасность ===== -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/security"
                android:textColor="#666666"
                android:textSize="14sp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/source_sans_3_semi_bold"/>

            <!-- Смена пароля -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="8dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="12dp"
                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:id="@+id/layout_change_password"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_password"
                        android:layout_marginEnd="16dp"
                        app:tint="@color/mainPurple" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/change_password"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:fontFamily="@font/source_sans_3_regular"
                        android:layout_weight="1"/>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_arrow_right"
                        app:tint="@color/black" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Сброс данных -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="24dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="12dp"
                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:id="@+id/layout_data_reset"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_reset"
                        android:layout_marginEnd="16dp"
                        app:tint="@color/mainPurple"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/data_recet"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:fontFamily="@font/source_sans_3_regular"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>

    <!-- ===== BottomMenuView ===== -->
    <com.ark_das.springclient.ui.BottomMenuView
        android:id="@+id/bottomMenuView"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_gravity="bottom" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
